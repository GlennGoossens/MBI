<% include ../partials/header %>

<div class="ui middle aligned center aligned grid">
                        
        <div class="column">
            <h2 class="ui blue header">
                <div class="content">
                   Edit <%= product.name %>
                </div>
            </h2>
            <form class="ui large form" action="/products/<%= product._id %>?_method=PUT" method="POST">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <input type="text" name="product[name]" value="<%=product.name%>" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <textarea name="product[description]" value="<%=product.description%>" required><%=product.description%></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <input type="number" name="product[price]" value="<%=product.price%>" min="0.01" step="0.01" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <input type="number" name="product[box]" value="<%= product.box%>" min="1" step="1" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <input type="text" name="product[image]" value="<%=product.image%>" required>
                        </div>
                    </div>
                    <div class="field">
                        <!-- available checkbox -->
                        <div class="ui checkbox">
                        <input type="checkbox" name="product[available]" value="<%=product.available%>" <%= product.available ? "checked" : "" %> required> 
                        <label>Available</label>
                        </div>
                    </div>
                    <div class="field">
                    <input type="submit" value="Add" class="ui fluid large positive submit button"/>
                    </div>
                </div>

                <div class="ui error message"></div>

            </form>
            <a href="/products"> Go Back </a>

        </div>
    </div>

<%include ../partials/footer %>